        </StackPanel>
        <Frame x:Name="Main" Margin="0,35,0,0" NavigationUIVisibility="Visible"/>
        <Button x:Name="forwad" Content="ඉදිරියට" HorizontalAlignment="Center" VerticalAlignment="Center" Height="53" Width="217" Click="forwad_Click" Background="Red" FontSize="30" BorderBrush="White" FontWeight="Bold" Foreground="#FFF9F9F9"/>
        <PasswordBox x:Name="paswdbox" HorizontalAlignment="Left" Margin="400,147,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
